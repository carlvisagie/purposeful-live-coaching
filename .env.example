# ===========================================
# Purposeful Live Coaching - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://user:password@host:5432/database

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
OAUTH_SERVER_URL=https://your-oauth-server.com
OWNER_OPEN_ID=your-owner-open-id

# ===========================================
# APPLICATION
# ===========================================
VITE_APP_ID=your-app-id
VITE_APP_TITLE=Purposeful Live Coaching
NODE_ENV=development
PORT=3000

# ===========================================
# STRIPE PAYMENTS
# ===========================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_AI_ESSENTIAL_MONTHLY=price_...
STRIPE_PRICE_AI_GROWTH_MONTHLY=price_...
STRIPE_PRICE_AI_TRANSFORMATION_MONTHLY=price_...

# ===========================================
# OPENAI (AI Coach & Voice)
# ===========================================
OPENAI_API_KEY=sk-...

# ===========================================
# EMAIL (Resend)
# ===========================================
RESEND_API_KEY=re_...
OWNER_EMAIL=admin@purposefullivecoaching.com

# ===========================================
# FORGE API (Maps, etc.)
# ===========================================
BUILT_IN_FORGE_API_URL=https://api.forge.com
BUILT_IN_FORGE_API_KEY=your-forge-api-key
VITE_FRONTEND_FORGE_API_KEY=your-frontend-forge-key
VITE_FRONTEND_FORGE_API_URL=https://api.forge.com

# ===========================================
# NOTIFICATIONS (Optional)
# ===========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# ===========================================
# FILE UPLOADS
# ===========================================
UPLOAD_DIR=/opt/render/project/src/uploads
